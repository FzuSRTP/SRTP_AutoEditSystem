.detail
{
  height:100%;
  display:flex;
  flex-direction: column;
}
.titleView
{
  margin:10rpx; 
  padding:10rpx;
}
input
{
  font-style:oblique;
  font-size:32rpx;
}
.contentView
{
  margin:10rpx; 
  padding:10rpx;
  display:flex;
  flex-direction: row;
  position:fixed;
  height:600rpx;
}
.contentInput
{
  position:fixed;
  width:700rpx;
  height:600rpx;
}
textarea
{
  font-style:oblique;
  font-size:32rpx;
}

.submitBtn
{
  position:fixed;
  bottom:120rpx;
  height:70rpx;
  width:100%;
  justify-content:center;
  align-items: center;
  border-radius: 10rpx;
  background-color: #6495ED;
  color: #fff;
  font-size:30rpx;
 
}
.button-hover {
  background-color: #4F94CD;
  opacity: 0.7;
}